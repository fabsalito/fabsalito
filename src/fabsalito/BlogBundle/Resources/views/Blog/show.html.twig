{% extends 'fabsalitoBlogBundle::layout.html.twig' %}

{% block title_primary %}{{ blog.title }}{% endblock title_primary %}

{% block body %}
<div class="span9">
    <div class="row">
        <div class="span9">
            <div class="muted">
                <time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time>
            </div>

            <legend><strong>{{ blog.title }}</strong></legend>
        </div>
    </div>
 
    <div class="row">
        <div class="span9">
            {#
            <ul class="thumbnails">
                <li class="span4">
                    <a href="#" class="thumbnail">
                        <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found">
                    </a>
                </li>
            </ul>
            #}

            <p>{{ blog.blog }}</p>
        </div>
    </div>    

    <div class="row">
        <div class="span9 section-title">

            <h4>Comments</h4>

        </div>
    </div>

    <div class="row">
        <div class="span9">

            {#% include 'fabsalitoBlogBundle:Comment:index.html.twig' with { 'comments': comments } %#}
            {% include 'fabsalitoBlogBundle:Comment:index.html.twig' %}

        </div>
    </div>

    <div class="row">
        <div class="span9 section-title">
          
            <h4>Add Comment</h4>

        </div>
    </div>

    <div class="row">
        <div class="span9">    
            
            {#% include 'fabsalitoBlogBundle:Comment:includes/form.html.twig' with { 'form': form } %#}
            {% include 'fabsalitoBlogBundle:Comment:includes/form.html.twig' %}

        </div>
    </div>

</div>
{% endblock body %}