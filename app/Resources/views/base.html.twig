<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
        {% block title_primary %}Home{% endblock title_primary %} - {% block title_secondary %}fabsalito{% endblock title_secondary %}
    </title>


    {% block stylesheets %}
    {% stylesheets 
        '@bootstrap_less'
        '@css'
    combine=true %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
    {% endblock %}

    

    {% block head_script %}
    {# SCRIPTS HERE #}
    {% endblock head_script %}

    {% block head_bottom %}
    
    {% endblock head_bottom %}

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body data-spy="scroll">

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <div class="nav-collapse collapse">
                    {% block navigation %}
                    {{ knp_menu_render('frontend_main') }}
                    {% endblock navigation %}
                </div>
            </div>
        </div>
    </div>

    <header>
        <div class="container">
            {% block header %}
                <div class="page-header">
                    <h1>
                        {% block blog_title %}fabsalito{% endblock blog_title %}
                        <small>
                            {% block blog_tagline %}Development{% endblock blog_tagline %}
                        </small>    
                    </h1>
                </div>
            {% endblock header %}
        </div>
    </header>
    
    <div class="container">
        {% block container %}
        <div class="row">
            
            {% block body %}
            <div class="span9">
            </div>    
            {% endblock body %}
            
            {% block sidebar %}
            <div class="span3">
            </div>
            {% endblock sidebar %}
            
        </div>
        {% endblock container %}
    </div>

    <footer class="footer">
        <div class="container">
            {% block footer %}
            <p class="text-center">
                &copy; <a href="https://github.com/fabsalito">fabsalito</a> {% block anio %}{{ "now" | date("Y") }}{% endblock anio %} - all rights reserved
            </p>
            {% endblock footer %}
        </div>
    </footer>

    {% block body_script %}
    {# To only use a subset or add more js overwrite and copy paste this block
    To speed up page loads save a copy of jQuery in your project and override this block to include the correct path
    Otherwise the regeneration is done on every load in dev more with use_controller: true
     #}
    {% javascripts
        'js/jquery-1.7.1.min.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-transition.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-modal.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-dropdown.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-scrollspy.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-tab.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-tooltip.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-popover.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-alert.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-button.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-collapse.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-carousel.js'
        '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-typeahead.js'
        '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-collection.js'
        '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-subnav.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% endblock body_script %}
</body>
</html>